                  <h1>Are you a hair stylist or a hair model?</h1>

                  <h2 class="signupFormStylist">Stylist</h2>
                  <h2 class="signupFormModel">Model</h2>




                  <!--Stylist Signup-->

                  <form action="/signup/stylist" method="POST" class="hidden stylistSignup">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="stylistUserName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="stylistExampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="stylistPassword" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="stylistConfirmPassword" name="confirmPassword">
                      </div>

                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="stylistLocation" name="location">
                      </div>
                      <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <input type="text" class="form-control" id="stylistBio" name="bio">
                      </div>
                      <div class="mb-3">
                        <label for="lookingFor" class="form-label">Looking for in a model</label>
                        <input type="text" class="form-control" id="stylistLookingFor" name="lookingFor">
                      </div>
                      <div class="mb-3">
                        <label for="modelPlan" class="form-label">Plan for model</label>
                        <input type="text" class="form-control" id="stylistModelPlan" name="modelPlan">
                      </div>
                      <div class="mb-3">
                        <label for="twitter" class="form-label">Twitter</label>
                        <input type="text" class="form-control" id="StylistTwitter" name="twitter">
                      </div>
                      <div class="mb-3">
                        <label for="instagram" class="form-label">Instagram</label>
                        <input type="text" class="form-control" id="StylistInstagram" name="instagram">
                      </div>
                      <div class="mb-3">
                        <label for="facebook" class="form-label">Facebook</label>
                        <input type="text" class="form-control" id="StylistFacebook" name="facebook">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>

                  <!--Model Signup-->

                 <form action="/signup/model" method="POST" class="hidden modelSignup">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="modelUserName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="modelExampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="modelPassword" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="modelConfirmPassword" name="confirmPassword">
                      </div>
                      
                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="modelLocation" name="location">
                      </div>
                      <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <input type="text" class="form-control" id="modelBio" name="bio">
                      </div>
                      <div class="mb-3">
                        <label for="lookingFor" class="form-label">Looking for in a stylist</label>
                        <input type="text" class="form-control" id="modelLookingFor" name="lookingFor">
                      </div>
                      <div class="mb-3">
                        <label for="modelPlan" class="form-label">What you're willing to do as a model</label>
                        <input type="text" class="form-control" id="modelModelPlan" name="modelPlan">
                      </div>
                      <div class="mb-3">
                        <label for="heat" class="form-label">How often do you use heat on your hair?</label>
                        <input type="text" class="form-control" id="heat" name="heat">
                      </div>
                      <div class="mb-3">
                        <label for="products" class="form-label">What hair products do you use?</label>
                        <input type="text" class="form-control" id="products" name="products">
                      </div>
                      <div class="mb-3">
                        <label for="travel" class="form-label">How far are you willing to travel?</label>
                        <input type="text" class="form-control" id="travel" name="travel">
                      </div>
                      <div class="mb-3">
                        <label for="twitter" class="form-label">Twitter</label>
                        <input type="text" class="form-control" id="modelTwitter" name="twitter">
                      </div>
                      <div class="mb-3">
                        <label for="instagram" class="form-label">Instagram</label>
                        <input type="text" class="form-control" id="modelInstagram" name="instagram">
                      </div>
                      <div class="mb-3">
                        <label for="facebook" class="form-label">Facebook</label>
                        <input type="text" class="form-control" id="modelFacebook" name="facebook">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>

            </section>
        </div>
